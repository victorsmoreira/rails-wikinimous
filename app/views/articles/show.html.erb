<div class="title d-flex align-items-end">
  <h1><%= @article.title %></h1>
  <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path(@article) %>
  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: '' %>

</div>

<p><%= @article.content %></p>
